page{ padding-top: 20rpx; background: #F5F4F9; font-size: 24rpx; color: #333;}
.newmsg{ text-align: center; margin-bottom: 0; -webkit-transition: all .8s; transition: all .8s; line-height: 0;}
.newmsg .link{ display: inline-block; border-radius: 0; overflow: hidden; height: 0; font-size: 24rpx; color: #fff; background: rgba(0,0,0,.5); line-height: 54rpx; padding: 0 32rpx;  -webkit-transition: all .8s; transition: all .8s;}
.newmsg-active{ margin-bottom: 20rpx;}
.newmsg-active .link{ height: 54rpx; border-radius: 26rpx;}
.topbox{ padding: 30rpx 0; background: #fff;}
.tb-til{ padding-left: 40rpx; font-size: 32rpx; line-height: 60rpx;}
.tb-box{ overflow: hidden; position: relative; white-space: nowrap; }
.tb-box .tb-li{ display: inline-block; position: relative; height: 160rpx; width: 260rpx; margin-right: 20rpx;}
.tb-box .tb-li:nth-child(1){ margin-left: 40rpx;}
.tb-box .tb-li:nth-last-child(1){ margin-right: 40rpx;}
.tb-box .tb-li-img{height: 160rpx; width: 260rpx; border-radius: 14rpx;}
.tb-box .tb-li-tx{ position: absolute; left: 0; top: 0; width: 100%; height: 100%; z-index: 2; padding: 0 20rpx; background: rgba(0,0,0,.4); border-radius: 14rpx; text-align: center; line-height: 160rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; color: #fff; font-size: 32rpx;}

.tplist{ padding: 20rpx 0 2rpx;}
.tplist .tpli{position: relative; background: #fff; margin-bottom: 20rpx; padding: 30rpx 40rpx 10rpx; }
.tplist .tpli-tl{ position: relative; height: 80rpx; padding-left: 100rpx;}
.tplist .tpli-head{ position: absolute; left: 0; top: 0; height: 80rpx; width: 80rpx; border-radius: 40rpx;}
.tplist .tpli-name{ padding-top: 10rpx; font-size: 28rpx; line-height: 36rpx;}
.tplist .tpli-time{ font-size: 20rpx; color: #999; line-height: 36rpx;}
.tplist .tpli-share{ position: absolute; right: 0; top: 0; height: 80rpx; width: 80rpx; background: none;}
.tplist .tpli-more{ position: absolute; right: 0; top: 50%; width: 44rpx; height: 8rpx; margin-top: -4rpx;}
.tplist .tpli-link{ display: block;}
.tplist .tpli-til{ padding: 20rpx 0 14rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; font-size: 32rpx; line-height: 40rpx;}
.tplist .tpli-desc{ font-size: 26rpx; line-height: 32rpx;text-overflow: -o-ellipsis-lastline; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2;line-clamp: 2;-webkit-box-orient: vertical;}
.tplist .tpli-bot{ overflow: hidden; padding: 18rpx 0 10rpx; line-height: 40rpx;}
.tplist .tpli-tag{ float: left; font-size: 24rpx; color: #288EFF;}
.tplist .tpli-tps{display: block; float: right;}
.tplist .tpli-tp{ display: block; position: relative; float: left; padding-left: 42rpx; margin-left: 20rpx;}
.tplist .tpli-tpi{ position: absolute; left: 0; top: 50%; height: 28rpx; width: 32rpx; margin-top: -16rpx;}
